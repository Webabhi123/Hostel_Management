
@{
    ViewData["Title"] = "Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pricing-plans-section">
    <div class="container">
        <h2 class="pricing-title-section">Here's a About Plan </h2>
        <div class="row gutter-small align-items-center">
            <div class="col-12 col-lg-4 order-1 order-0">
                <p class="pricing_filter">
                    Get Full Access features
